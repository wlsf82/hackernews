{
  "name": "hackernews",
  "version": "0.1.0",
  "dependencies": {
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:optimized:for:prod": "rm -rf build && npm run build && serve -s build",
    "build": "react-scripts build",
    "test": "npm run ct && npm run vt && npm run e2e:ci",
    "test:e2e:in:prod:optimized:env": "cypress run --config baseUrl=http://localhost:5000",
    "e2e": "cypress run",
    "e2e:ci": "start-server-and-test http://localhost:3000 e2e",
    "e2e:ci:optimized:prod": "start-server-and-test start:optimized:for:prod http://localhost:5000 test:e2e:in:prod:optimized:env",
    "e2e:prod": "cypress run --record --tag 'e2e prod' --config baseUrl=https://hackernews-seven.vercel.app",
    "ct": "cypress run-ct --record --tag 'component' --env grepTags=-@visual",
    "cy:open": "cypress open",
    "open:e2e:with:server": "start-server-and-test http://localhost:3000 cy:open",
    "cy:open-ct": "cypress open-ct",
    "vt": "percy exec -- cypress run-ct --record --tag 'component,visual' --env grepTags=@visual"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^5.8.1",
    "@cypress/webpack-dev-server": "^1.3.1",
    "@percy/cli": "^1.0.0-beta.52",
    "@percy/cypress": "^3.1.0",
    "cypress": "^7.7.0",
    "cypress-grep": "^2.4.0",
    "start-server-and-test": "^1.12.3",
    "webpack-dev-server": "^3.11.1"
  }
}
